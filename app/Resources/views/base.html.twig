{% from '::flash.html.twig' import session_flash %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %} | Sistema de Gestión Estación de Servicios</title>

        {% include "::stylesheets.html.twig" %}
        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            {% block header_superior_logo %}
            {# Header Superior y logo #}
            {% endblock %}

            {% block left_menu_items %}
            {# Left menu items #}
            {% endblock %}

            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header">
                            {% block title %}
                                Título encabezado
                            {% endblock %}
                        </h3>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->

                {# Session flashes #}
                {% block flashes %}
                    {% if app.session.flashbag.peekAll|length > 0 %}
                        <div class="row">
                            <div id="global-messages" class="col-sm-12">
                                {{ session_flash() }}
                            </div>
                        </div>
                    {% endif %}
                {% endblock flashes %}

                {% block content %}
                    Área de Trabajo
                {% endblock %}
            </div>
            <!-- /#page-wrapper -->
        {% endblock body %}

        {% block footer %}
            <footer class="text-center">
                <div class="footer"><a href="#"><strong>HatueySoft</strong></a> versión <small>{{ version_sistema }}</small></div>
            </footer>
        {% endblock %}

        {% include "::javascripts.html.twig" %}
        {% block foot_script %}
            {# To only use a subset or add more js overwrite and copy paste this block
            To speed up page loads save a copy of jQuery in your project and override this block to include the correct path
            Otherwise the regeneration is done on every load in dev more with use_controller: true
             #}
