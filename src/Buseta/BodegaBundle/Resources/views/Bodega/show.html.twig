{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Ver datos de la Bodega' %}

{% block area_trabajo %}

    <table class="table table-striped" style="font-size: 16px;">
        <tbody>

            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>

            <tr>
                <th>Responsable</th>
                <td>{{ entity.responsable }}</td>
            </tr>

            <tr>
                <th>Código</th>
                <td>
                    {% if entity.codigo == '' %}
                        <label style="color: red">La bodega no tiene código</label>
                    {% else %}
                        {{ entity.codigo }}
                    {% endif %}
                </td>
            </tr>

            <tr>
                <th>Descripción</th>
                <td>
                    {% if entity.descripcion == '' %}
                        <label style="color: red">La bodega no tiene descripción</label>
                    {% else %}
                        {{ entity.descripcion }}
                    {% endif %}
                </td>
            </tr>

            <tr>
                <th>Dirección</th>
                <td>
                    {% if entity.direccion == '' %}
                        <label style="color: red">La bodega no tiene dirección</label>
                    {% else %}
                        {{ entity.direccion }}
                    {% endif %}
                </td>
            </tr>

        </tbody>
    </table>

    <div class="form-actions">
        {{ form_start(delete_form) }}
            <a class="btn btn-primary" href="{{ path('bodega_edit', { 'id': entity.id }) }}"> Editar</a>
            <a class="btn btn-primary" href="{{ path('bodega') }}"> Listado</a>
            <a class="btn btn-primary" href="{{ path('bodega_productomaxmin', { 'id': entity.id }) }}"> Maximos y Minimos</a>
            {#<button type="sumbit" class="btn btn-primary">Eliminar</button>#}
        {{ form_end(delete_form) }}
    </div>


{% endblock %}


{% block contenido %}


{% endblock %}
