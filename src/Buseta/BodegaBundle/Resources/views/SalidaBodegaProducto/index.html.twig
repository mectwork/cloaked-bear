<div class="btn-group" style="margin-bottom: 8px;">
    <a class="btn btn-primary" href="#form_lineas_modal" ><span class="glyphicon glyphicon-plus-sign"></span> {{ 'lineas_de_producto.btn.adicionar'|trans({}, 'BusetaBodegaBundle') }}</a>
</div>

<div class="row">
    <div class="col-lg-4"><strong>Resultados:</strong> {{ entities.getTotalItemCount }}</div>
</div>

<table class="records_list table table-striped table-bordered table-condensed table-hover">
    <thead>
    <tr>
        <th>{{ knp_pagination_sortable(entities, 'lineas_de_producto.producto' | trans({}, 'BusetaBodegaBundle'), 'l.producto') }}</th>
        <th>{{ knp_pagination_sortable(entities, 'lineas_de_producto.cantidad' | trans({}, 'BusetaBodegaBundle'), 'l.cantidad') }}</th>
        <th>{{ knp_pagination_sortable(entities, 'lineas_de_producto.seriales' | trans({}, 'BusetaBodegaBundle'), 'l.seriales') }}</th>
        <th style="text-align: center">Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.producto.nombre }}</td>
            <td>{{ entity.cantidad }}</td>
            <td>{{ entity.seriales }}</td>
            <td  style="text-align: center;">
                <a class="btn btn-primary btn-xs" href="#btn_lineas_edit" data-content="{{ entity.id }}"><i class="fa fa-edit"> Editar</i></a>
                <a class="btn btn-danger btn-xs" href="#btn_lineas_delete" data-content="{{ entity.id }}"><i class="fa fa-remove"> Eliminar</i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="lineas-paginator row">
    <div class="col-lg-12 text-center">{{ knp_pagination_render(entities) }}</div>
</div>

<div class="modal" id="form_lineas_modal"></div>
<div class="modal" id="form_lineas_delete_modal"></div>
