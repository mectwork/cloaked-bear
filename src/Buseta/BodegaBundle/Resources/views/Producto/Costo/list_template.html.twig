<div class="btn-group" style="margin-bottom: 8px;">
    <a class="btn btn-primary" href="#form_costos_modal"><span class="glyphicon glyphicon-plus-sign"></span> {{ 'costo.btn.adicionar'|trans({}, 'BusetaBodegaBundle') }}</a>
</div>

<div class="paginator row">
    <div class="col-lg-4"><strong>Resultados:</strong> {{ entities.getTotalItemCount }}</div>
</div>

<table class="costos_records_list table table-striped table-bordered table-condensed table-hover">
    <thead>
    <tr>
        {#<th>{{ knp_pagination_sortable(entities, 'costo.valor' | trans({}, 'BusetaTallerBundle'), 'd.valor') }}</th>#}
        <th>Costo</th>
        <th>Proveedor</th>
        <th>CÃ³digo alternativo</th>
        <th>Estado</th>
        <th style="width: 1%;border: 0;"></th>
        <th style="width: 1%;border: 0;"></th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.costo }}</td>
            <td>{{ entity.proveedor }}</td>
            <td>{{ entity.codigoAlternativo }}</td>
            <td class="text-center">{{ entity.activo ? '<i class="fa fa-circle text-success" title="Activo"></i>' : '<i class="fa fa-circle-o text-danger" title="No activo"></i>' }}</td>

            <td><a class="btn btn-primary btn-xs" href="#edit" data-content="{{ entity.id }}" title="Editar"><i class="fa fa-edit"> Editar</i></a></td>
            <td><a class="btn btn-danger btn-xs" href="#delete" data-content="{{ entity.id }}" title="Eliminar"><i class="fa fa-remove"> Eliminar</i></a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="10">{{ 'messages.no_results' | trans({}, 'BusetaBodegaBundle') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="costos-paginator row">
    <div class="col-lg-12" style="text-align: center">{{ knp_pagination_render(entities) }}</div>
</div>

<div class="modal" id="form_costos_modal"></div>
<div class="modal" id="form_costos_delete_modal"></div>
