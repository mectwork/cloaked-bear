                var precioTotal = 0;

                $('[id^="bodega_pedido_compra_pedido_compra_lineas_"][id$="_importe_linea"]').each(function(key, value){
                    montototal += parseFloat($(value).val());
                });

                //Actualizar el valor del precio y monto de todas las lineas
                $('#bodega_pedido_compra_importe_total_lineas').val(montototal);
                $('#bodega_pedido_compra_importe_total').val(montototal);
