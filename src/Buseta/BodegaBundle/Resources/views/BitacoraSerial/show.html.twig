{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Ver Datos de Bit√°cora Seriales Producto: ' ~ entity.producto %}

{% block area_trabajo %}
    <table class="table table-striped" style="font-size: 16px;">
        <tbody>
            <tr>
                <th>Serial</th>
                <td>{{ entity.serial }}</td>
            </tr>
            <tr>
                <th>Producto</th>
                <td>{{ entity.producto }}</td>
            </tr>
            <tr>
                <th>Bodega</th>
                <td>{{ entity.almacen }}</td>
            </tr>
            <tr>
                <th>Tipo Movimiento</th>
                <td>{{ entity.tipoMovimiento }}</td>
            </tr>
            <tr>
                <th>Cantidad Movida</th>
                <td>{{ entity.cantidadMovida }}</td>
            </tr>
            <tr>
                <th>Fecha Movimiento</th>
                <td>{{ entity.fechaMovimiento  | date('d/m/Y h:i a') }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-actions">
        <a class="btn btn-primary" href="{{ path('bitacoraserial') }}">
            <span class="glyphicon glyphicon-list"></span>
            Listado
        </a>
    </div>
{% endblock %}
