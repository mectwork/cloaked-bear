{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Ver Datos de Proveedor' %}

{% block area_trabajo %}

    <div class="row">
        <div class="col-md-2">
            <a href="#" class="thumbnail">
                {%  if entity.foto %}
                    <img src="{{ asset(entity.foto.webPath)}}" alt="Imagen" width="152" height="120"/>
                {% else %}
                    <img src="{{ asset('bundles/busetabodega/images/default.png') }}" alt="Imagen por defecto"/>
                {% endif %}
            </a>
        </div>
        <div class="col-md-10">
            <table class="table table-striped" style="font-size: 16px;">
                <tbody>
                <tr>
                    <th>Alias</th>
                    <td>{{ entity.alias }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ entity.nombre }}</td>
                </tr>
                <tr>
                    <th>Teléfono</th>
                    <td>{{ entity.telefono }}</td>
                </tr>
                <tr>
                    <th>Fax</th>
                    <td>{{ entity.fax }}</td>
                </tr>
                <tr>
                    <th>CifNif</th>
                    <td>{{ entity.cifNif }}</td>
                </tr>
                <tr>
                    <th>Crédito Límite</th>
                    <td>{{ entity.creditoLimite }}</td>
                </tr>
                <tr>
                    <th>Observaciones</th>
                    <td>{{ entity.observaciones }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="form-actions">
        <form action="{{ path('proveedor_delete', {'id': entity.proveedorId}) }}" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="DELETE"/>
            <a class="btn btn-primary" href="{{ path('proveedor') }}"> Listado</a>
            <button type="submit" class="btn btn-primary"> Eliminar</button>
        </form>
    </div>

{% endblock %}
