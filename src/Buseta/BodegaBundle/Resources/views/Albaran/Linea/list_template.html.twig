<div class="btn-group" style="margin-bottom: 8px;">
    <a class="btn btn-primary" href="#form_lineas_modal"><span class="glyphicon glyphicon-plus-sign"></span> {{ 'linea.btn.adicionar'|trans({}, 'BusetaBodegaBundle') }}</a>
</div>

<div class="paginator row">
    <div class="col-lg-4"><strong>Resultados:</strong> {{ entities.getTotalItemCount }}</div>
</div>

<table class="linea_records_list table table-striped table-bordered table-condensed table-hover">
    <thead>
    <tr>
        {#<th>{{ knp_pagination_sortable(entities, 'linea.valor' | trans({}, 'BusetaTallerBundle'), 'd.valor') }}</th>#}
        <th style="text-align: left">LÃ­nea</th>
        <th style="text-align: left">Producto</th>
        <th style="text-align: left">Cantidad Movida</th>
        <th style="text-align: left">Bodega</th>
        <th style="text-align: left">UOM</th>
        <th style="text-align: left">Valor Atributos</th>
        <th style="text-align: center">Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.linea }}</td>
            <td>{{ entity.producto }}</td>
            <td>{{ entity.cantidadMovida }}</td>
            <td>{{ entity.almacen }}</td>
            <td>{{ entity.uom }}</td>
            <td>{{ entity.valorAtributos }}</td>

            <td style="width: 10%; text-align: center;">
                {#{% if reporte.diagnostico == null %}#}
                        <a class="btn btn-danger btn-xs" href="#delete" data-content="{{ entity.id }}"><i class="fa fa-remove"> Eliminar</i></a>
                    {#{% else %}#}
                        {#<a class="btn btn-danger btn-xs disabled" href="#delete" data-content="{{ entity.id }}"><i class="fa fa-remove"> Eliminar</i></a>#}
                {#{% endif %}#}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="10">{{ 'messages.no_results' | trans({}, 'BusetaBodegaBundle') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="paginator row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">{{ knp_pagination_render(entities) }}</div>
</div>

<div class="modal" id="form_lineas_modal"></div>
<div class="modal" id="form_lineas_delete_modal"></div>