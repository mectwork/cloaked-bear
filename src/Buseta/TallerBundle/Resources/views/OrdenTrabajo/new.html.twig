                // prevent the link from creating a "#" on the URL
                event.preventDefault();

                var modal = $('div.modal#nuevaTarea');

                // captura de valores del modal
                var tareaadicional_grupo                = modal.find('#buseta_tallerbundle_tarea_adicional_grupo');
