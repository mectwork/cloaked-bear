{% extends "BusetaTallerBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Adicionar nueva tarea de mantenimiento' %}

{% block area_trabajo %}

    <form action="{{ path('tareamantenimiento_create') }}" method="post" {{ form_enctype(form) }}>

        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.valor) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.grupo) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.subgrupo) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.garantia) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.kilometros) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.horas) }}
            </div>
        </div>

        <br/>
        <div class="row">
            <div class="col-md-4">
                <input class="btn btn-primary" style="height: 34px" type="submit" value="Aceptar">
                <a class="btn btn-primary" href="{{ path('tareamantenimiento') }}"> Cancelar</a>
            </div>
        </div>

        {{ form_rest(form) }}
    </form>

{% endblock %}


{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function () {
            $('#{{ form.grupo.vars.id }}').change(function () {
                var data = {
                    grupo_id: $(this).val()
                };

                $.ajax({
                    type: 'GET',
                    url: '{{ path("tareamantenimiento_ajax_grupos_subgrupos") }}',
                    data: data,
                    success: function (data) {
                        var values = $.parseJSON(data);
                        var $subgrupo_selector = $('#{{ form.subgrupo.vars.id }}');

                        $subgrupo_selector.html('<option>---Seleccione---</option>');

                        for (var i = 0, total = values.length; i < total; i++) {
                            $subgrupo_selector.append('<option value="' + values[i].id + '">' + values[i].valor + '</option>');
                        }
                    }
                });
            });

        });
    </script>
{% endblock %}
