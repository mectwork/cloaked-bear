<div class="btn-group" style="margin-bottom: 8px;">
    <a class="btn btn-primary" href="#form_onecprod_modal" ><span class="glyphicon glyphicon-plus-sign"></span> {{ 'orden_necesidad_producto.btn.adicionar'|trans({}, 'BusetaTallerBundle') }}</a>
</div>

<div class="row">
    <div class="col-lg-4"><strong>Resultados:</strong> {{ entities.getTotalItemCount }}</div>
</div>

<table class="records_list table table-striped table-bordered table-condensed table-hover">
    <thead>
    <tr>
        <th>{{ knp_pagination_sortable(entities, 'orden_necesidad_producto.producto' | trans({}, 'BusetaTallerBundle'), 'o.producto') }}</th>
        <th>{{ knp_pagination_sortable(entities, 'orden_necesidad_producto.cantidad' | trans({}, 'BusetaTallerBundle'), 'o.cantidad') }}</th>
        <th>{{ knp_pagination_sortable(entities, 'orden_necesidad_producto.seriales' | trans({}, 'BusetaTallerBundle'), 'o.seriales') }}</th>
        <th style="text-align: center">Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.producto ? entity.producto.nombre : '-' }}</td>
            <td>{{ entity.cantidad }}</td>
            <td>{{ entity.seriales }}</td>
            <td  style="text-align: center;">
                <a class="btn btn-primary btn-xs" href="#btn_onecprod_edit" data-content="{{ entity.id }}"><i class="fa fa-edit"> Editar</i></a>
                <a class="btn btn-danger btn-xs" href="#btn_onecprod_delete" data-content="{{ entity.id }}"><i class="fa fa-remove"> Eliminar</i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="onecprod-paginator row">
    <div class="col-lg-12 text-center">{{ knp_pagination_render(entities) }}</div>
</div>

<div class="modal" id="form_onecprod_modal"></div>
<div class="modal" id="form_onecprod_delete_modal"></div>
