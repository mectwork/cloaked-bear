{% block collection_widget %}
    {% spaceless %}
    <div class="collection">
        {% if prototype is defined %}
            {% set attr = attr | merge({'data-prototype': block('collection_item_widget') }) %}
        {% endif %}
        {{ form_errors(form) }}

        <div class="panel panel-default">
            <div class="panel-body">
                <div  {{ block('widget_container_attributes') }}>
                    {% set counter = form | length %}
                    {% for rows in form %}
                        {{ _self.template(rows) }}
                    {% endfor %}
                    {% if counter == 0 %}
                        <div id="no-elements-tr">No existen elementos. Presione "Adicionar" para agregar nuevos elementos.</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div id="modal-delete-archivoadjunto" class="modal modal-darkorange fade" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header clearfix" style="color: #d73d32;">
                    <i class="glyphicon glyphicon-fire pull-left" style="font-size: 25px; margin-top: 10px;"></i>
                    <div class="modal-title pull-left"><h3 style="margin: 10px;">{{ 'messages.danger' | trans({}, 'BusetaBodegaBundle') }}</h3></div>
                </div>

                <div class="modal-body" style="color: #737373;">
                    <p>Usted está tratando de eliminar el Archivo Adjunto <strong></strong>.
                        Al aceptar la acción se eliminarán los datos de forma permanente. <strong>¿Está seguro que desea continuar?</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'actions.cancel' | trans({}, 'BusetaBodegaBundle') }}</button>
                    <button type="button" class="btn btn-danger"><i class="fa fa-remove"></i> {{ 'actions.confirm' | trans({}, 'BusetaBodegaBundle') }}</button>
                </div>
            </div> <!-- / .modal-content -->
        </div> <!-- / .modal-dialog -->
    </div>
    {% endspaceless %}
{% endblock collection_widget %}

{% block collection_item_widget %}
        {% spaceless %}
            {{ _self.template(prototype) }}
        {% endspaceless %}
{% endblock collection_item_widget %}

{% macro template(prototype) %}
<div class="row">
    {% if prototype.vars.data is null or prototype.vars.data.id is null %}
        <div class="col-lg-4 form-group">
            {{ form_row(prototype.id) }}
            {{ form_row(prototype.file) }}
        </div>
    {% else %}
        <div class="col-lg-4">
            <div class="well well-small">{{ prototype.vars.data.originalName }}</div>
        </div>
    {% endif %}
    <div class="col-lg-2">
        <a class="btn btn-danger btn-sm delete_archivo_link" href="#delete" {% if prototype.vars.data is not null and prototype.vars.data.id is not null %}data-id="{{ prototype.vars.data.id }}"{% endif %}><i class="fa fa-remove"></i> Eliminar</a>
    </div>
</div>
{% endmacro %}
